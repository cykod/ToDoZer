<tr id='task-<%= task.id %>'>
  <td>
    <% if task.done? %>
      <%= link_to "Not Done", task_unfinish_path(task), method: "put", class: "btn", remote: true %>
    <% else -%>
      <%= link_to "Done", task_finish_path(task), method: "put", class: "btn", remote: true %>
    <% end -%>
  </td>
  <td><%= task.name %></td>
  <td>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                task_path(task),
                :method => :delete,
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  </td>
</tr>
